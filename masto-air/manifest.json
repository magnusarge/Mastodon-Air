{
  "manifest_version": 3,
  "name": "Mastodon Air",
  "description": "Mastodon light theme.",
  "version": "2.0.8",
  "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png",
      "256": "images/icon256.png",
      "512": "images/icon512.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css": ["styles/styles.css",
                "styles/multi-column.css",
                "styles/colors.css",
                "styles/flex-columns/column-inner.css",
                "styles/compose-panel/compose-panel.css",
                "styles/compose-panel/compose-form.css",
                "styles/compose-panel/search.css",
                "styles/compose-panel/navigation-bar.css",
                "styles/main-panel/scrollable.css"]
      }
    ]
}
